{
  "name": "@kotori-bot/root",
  "version": "0.9.9",
  "description": "ChatBot Framework",
  "private": true,
  "scripts": {
    "loader": "pnpm --filter @kotori-bot/loader",
    "build": "pnpm run loader build",
    "start": "pnpm run loader start",
    "dev": "pnpm build && pnpm run loader dev",
    "test": "echo testing",
    "lint": "eslint \"{packages,modules}/**/src/*.{ts,tsx}\" --fix",
    "format": "prettier --config .prettierrc \"{packages,modules}/**/src/*.ts\" --write",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "license": "GPL-3.0",
  "author": "Hotaru <biyuehuya@gmail.com>",
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "standard-version": "^9.5.0",
    "@types/node": "^20.8.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}