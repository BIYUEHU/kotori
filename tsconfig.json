{
    "extends": "./tsconfig.option.json",
    "compilerOptions": {
        "baseUrl": ".", // Base directory for imports
        /* Path mapping for module imports */
        "paths": {
            "@kotori-bot/*": [
                "packages/*/src"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./packages/kotori/src/global.d.ts"
        ],
        "outDir": "./dist/", // Output directory
        "declarationDir": "./dist/" /* Optional */ // Output directory for declarations
    },
    /* Included files */
    "include": [
        "*/**/src/**/*.ts"
        // "src/**/*.d.ts" /* Optional */,
        // "src/**/*.tsx" /* Optional */,
        // "src/**/*.vue" /* Optional */
    ],
    /* Excluded files */
    "exclude": [
        "node_modules",
        "*.test.ts",
        "old"
    ] /* Optional */
}